CC = clang
# FLAGS = -Wall -Werror -Wextra -Weverything -Wno-padded
INCLUDE = -I ./inc -I ./libft/inc
NAME = fdf.out
OBJ = $(addsuffix .o, $(basename $(SRC)))
SRC = \
	./src/main.c \
	./src/parser/parcer_map.c

all: $(NAME)
################################################################################
# Create Executable
################################################################################
$(NAME): $(OBJ)
	$(CC) $(FLAGS) $(OBJ) -o $(NAME) -L ./libft -lft
################################################################################
# Compiling Source
################################################################################
$(OBJ): %.o: $(basename $@)%.c
	$(CC) $(FLAGS) $(INCLUDE) -c $< -o $@

clean:
################################################################################
# Clean *.o
################################################################################
	rm -f $(OBJ)

fclean: clean
################################################################################
# Full clean *.o & binairy
################################################################################
	rm -f $(NAME)

re: fclean all
################################################################################
# Full clean *.o & binairy & re-build
################################################################################
